<%= form_with(model: @post, local: true ,url: choose_new_or_edit) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>There are errors.</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="content">
      <%= form.label :content %>
      <%= form.text_area :content %>
    </div>
    <div class="image">
      <%= form.label :image %>
      <%= image_tag(@post.avatar.url) if @post.avatar && @post.avatar.url %>
      <%= form.file_field :avatar %>
      <%= form.hidden_field :avatar_cache %>
    </div>
  </div>
  <%= form.submit %>
<% end %><br>


