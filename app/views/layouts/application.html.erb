<!DOCTYPE html>
<html>
  <head>
    <title>Facebook_clone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">  <!-- head内にこのタグ設定を追記する -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <ul class="menu">
      <li>
      <a href="#home">Home</a>
      </li>
      <li>
      <a href="#posts">show</a>
      </li>
      <li>
      <a href="#">Profile</a>
      </li>
      <li>
      <a href="#">Login </a>
      </li>
      <li>
      <a href="#Inscription">Sign up</a>
      </li>
    </ul>
  <body>
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <% if logged_in? %>

    <div class="actions">
      <%=  link_to "Profile", user_path(current_user.id), class: 'btn btn-primary'%>
      <%=  link_to "Logout", session_path(current_user.id), method: :delete, class: 'btn btn-primary'%>
    </div>

    <%= link_to "Profile", user_path(current_user.id) %>
    <%= link_to "Logout", session_path(current_user.id), method: :delete %>
    <% else %>


    <div class="actions">
      <%=  link_to "Sign up", new_user_path, class: 'btn btn-primary'%>
      <%=  link_to "Login", new_session_path, class: 'btn btn-primary'%>
    </div>


    <% end %>
    <%= yield %>

  </body>
</html>
